<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="App_OficinaVirtual.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:App_OficinaVirtual"
    xmlns:views="clr-namespace:App_OficinaVirtual.Views"
    Shell.FlyoutBehavior="Disabled"
    Title="App_OficinaVirtual">

    <ShellContent
        
        ContentTemplate="{DataTemplate views:MainPage}"
        Route="home" />

    <ShellContent
        Route="login"
        ContentTemplate="{DataTemplate views:LoginView}" />

    <ShellContent
        Route="registro"
        ContentTemplate="{DataTemplate views:RegisterView}" />

</Shell>

